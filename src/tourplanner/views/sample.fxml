<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" gridLinesVisible="false" hgap="10" minHeight="600.0" minWidth="400.0" prefHeight="600.0" prefWidth="406.0" vgap="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tourplanner.views.MainController">
    <children>
        <TextField fx:id="searchbox" promptText="Search" GridPane.columnSpan="2" GridPane.rowIndex="1" />
        <Label text="Tours" GridPane.halignment="LEFT" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
        <Button defaultButton="true" onAction="#search" text="Search" GridPane.columnIndex="2" GridPane.rowIndex="1">Save</Button>
      <MenuBar GridPane.columnSpan="3">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="New Tour" />
                <MenuItem mnemonicParsing="false" text="Import Tour" />
                <MenuItem mnemonicParsing="false" text="Export Tour" />
                <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                <MenuItem mnemonicParsing="false" text="Edit Tour" />
                <MenuItem mnemonicParsing="false" text="Delete Tour" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <ListView fx:id="tourlist" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="3" GridPane.rowSpan="4" />
      <Label fx:id="tourtitle" text="Tourtitle" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button mnemonicParsing="false" onAction="#edit" text="Edit" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
      <GridPane GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Von" />
            <Label fx:id="start" text="Start" GridPane.columnIndex="1" />
            <Label text="Bis" GridPane.columnIndex="2" />
             <Label fx:id="finish" text="Ziel" GridPane.columnIndex="3" />
            <Label text="Distanz" GridPane.rowIndex="1" />
            <Label fx:id="distance" text="42.125km" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <tabs>
          <Tab text="Beschreibung">
            <content>
              <AnchorPane fx:id="descri" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="description" layoutX="14.0" layoutY="14.0" text="Label" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Bild">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="27.0" layoutY="-9.0" pickOnBounds="true" preserveRatio="true" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
      <Label text="Logs" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <Button mnemonicParsing="false" onAction="#addLog" text="+" GridPane.columnIndex="2" GridPane.rowIndex="5" />
      <Button maxWidth="29.0" minWidth="29.0" mnemonicParsing="false" onAction="#deleteLog" prefWidth="29.0" text="-" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
      <TableView fx:id="logs" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <columns>
          <TableColumn fx:id="date" prefWidth="75.0" text="Date" />
          <TableColumn fx:id="time" prefWidth="103.0" text="Total time" />
            <TableColumn fx:id="rating" prefWidth="97.0" text="Rating" />
        </columns>
      </TableView>
    </children>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="196.0" prefWidth="212.0" />
        <ColumnConstraints hgrow="NEVER" maxWidth="80.0" minWidth="48.0" prefWidth="64.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="TOP" vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
      <RowConstraints maxHeight="65.0" minHeight="61.0" prefHeight="65.0" vgrow="NEVER" />
      <RowConstraints maxHeight="243.0" minHeight="168.0" prefHeight="177.0" vgrow="NEVER" />
      <RowConstraints maxHeight="255.0" minHeight="23.0" prefHeight="30.0" vgrow="NEVER" />
      <RowConstraints minHeight="151.0" prefHeight="220.0" vgrow="ALWAYS" />
    </rowConstraints>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</GridPane>
